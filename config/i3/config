# The middle button over a titlebar kills the window
bindsym --release button2 kill

# The right button toggles floating
bindsym $mod+button3 floating toggle

# Press $mod+o followed by either f, c, Escape or Return to launch firefox, audacious and the most used apps by me
set $mode_launcher Launch: [f]irefox [a]udacious [n]autilus [v]lc [t]elegram [l]ibreoffice writer 
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec firefox
    bindsym t exec /home/claudio/Descargas/Telegram/Telegram
    bindsym a exec audacious
    bindsym n exec nautilus
    bindsym v exec vlc 
    bindsym l exec libreoffice --writer


    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ntilde resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Screen Shots
# Con la tecla de Impr, simplemente será un screenshot de toda la pantalla 
# y se moverá a la carpeta Imágenes/screenshots
bindsym Print exec scrot -d 2 -q 100 '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f ~/Imágenes/screenshots'

# Sacar un screenshot de una área en especifico de la pantalla
# Aquí, con la tecla Ctrl presionada, sueltas el Impr y aparecerá un cursor # para seleccionar un area de la pantalla 
bindsym Control+Print exec scrot -q 100 -s '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f ~/Imágenes/screenshots'

#Resize windows
bindsym $mod+r mode "resize"

