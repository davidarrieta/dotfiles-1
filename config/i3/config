# Press $mod+o followed by either f, c, Escape or Return to launch firefox, audacious and the most used apps by me
set $mode_launcher Launch: [f]irefox [m]usic(ncmpcpp) [n]autilus [v]lc [t]elegram [l]ibreoffice writer 
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec firefox
    bindsym t exec /home/claudio/Descargas/Telegram/Telegram
    bindsym m exec termite -e ncmpcpp --class=ncmpcpp --name=ncmpcpp

    bindsym n exec nautilus
    bindsym v exec vlc 
    bindsym l exec libreoffice --writer


    bindsym Escape mode "default"
    bindsym Return mode "default"
}

set $mode_launcher_screenshot What quality do you want? [h]ighQuality(.png) [l]owQuality(.jpg) 
bindsym Print mode "$mode_launcher_screenshot"

mode "$mode_launcher_screenshot" {

	bindsym h exec scrot -d 2 -q 100 '%Y-%m-%d-%s_screenshot_$wx$h.png' -e 'mv $f ~/Imágenes/screenshots' && notify-send 'Screenshot captured!' 'Image saved in your home directory'

	bindsym l exec scrot -d 2 -q 100 '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f ~/Imágenes/screenshots' && notify-send 'Screenshot captured!' 'Image saved in your home directory'

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

